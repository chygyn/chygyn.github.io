<mvc:View controllerName="Leave.view.App" xmlns="sap.m"
	xmlns:t="sap.ui.table" xmlns:k="sap.ui.commons" xmlns:core="sap.ui.core"
	xmlns:ui="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
		
	<Page id="myPage"  showHeader="false" >
<!-- 			<content> -->

			<!-- <VBox> -->
			<Image src="./model/logo.jpg" width="10rem" />
			<FlexBox alignItems="Center" width="100%" justifyContent="Center">
				<items>
					<Text text="Заполните заявку на отпуск" class="myFontSize" />
				</items>
			</FlexBox>
			<l:Grid hSpacing="1" defaultSpan="L5 M12 S12">
				<l:content>
<!-- <HBox> -->
					<ui:Calendar id="Calendar" intervalSelection="true"
						months="2" select="handleCalendarSelect" class="myCal">
						<ui:layoutData>
							<l:GridData span="L7 M12 S12" />
<!-- 							linebreakL="false" -->
<!-- 								linebreakM="true" linebreakS="true" /> -->
						</ui:layoutData>
					</ui:Calendar>
					<VBox class="myLeaveInfo" id="blockInput">
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="auto" class="myPage">
							<items>
								<Text text="Отпуск с" />
								<Text id="selectedDateFrom" text="Выберите день в календаре" />
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="auto" class="myPage">
							<items>
								<Text text="Отпуск по" />
								<Text id="selectedDateTo" text="Выберите день в календаре" />
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="100%" class="myPage">
							<items>
								<Text text="Утверждающий" width="110px"/>
								<ComboBox id="approver" selectionChange="handleChange" width="170px"
									items="{
									path:'requests>/Who'
								}">
									<core:Item text="{requests>Name}" />
								</ComboBox>
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="100%" class="myPage">
							<items>
								<Text text="Подразделение" />
								<Text text="Телемаркетинг" />
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="auto" class="myPage">
							<items>
								<Text text="Выбрано дней" />
								<Text id="select" text="0" />
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="auto" class="myPage">
							<items>
								<Text text="Доступно дней" />
								<Text id="res" text="{requests>/Limit}" />
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="auto" class="myPage">
							<items>
								<Button class="myButton" id="add" press="addLeave" text="Отправить" />
								<Button class="myButton" id="history" press="handleHistory"
									text="История заявок" />
							</items>
						</FlexBox>
<!-- 						<layoutData> -->
<!-- 							<l:GridData span="L12 M12 S12" linebreakL="true" -->
<!-- 								linebreakM="true" linebreakS="true" /> -->
<!-- 						</layoutData> -->
					</VBox>
				</l:content>
			</l:Grid>
<!-- 		</content> -->
<!-- 	</HBox> -->

	</Page>

</mvc:View>
