		<footer>
			<Bar>
				<contentRight>
					<Button text="Сохранить" press="SaveItem">
					</Button>
					<Button text="Отменить" press="handleCancel">
					</Button>
				</contentRight>
			</Bar>
		</footer>
	
	</Page>
</core:View>
