<core:View controllerName="evola.recruiting.view.Creation"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Page title="Создание заявки" class="myHeader">
	<ScrollContainer 
	busy="false"
	busyIndicatorDelay="1000"
	visible="true"
	fieldGroupIds=""
	width="auto"
	height="auto"
	horizontal="true"
	vertical="false"
	focusable="true"
	validateFieldGroup="">



		<FlexBox alignItems="Center" justifyContent="Center" width="auto">
			<VBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Название вакансии*" class="myTextForInput" />
						<Input value="" width="auto" id="Name"/>
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Плановая дата*" class="myTextForInput" />
						<DatePicker id="date" placeholder="Введите дату.." change="handleChange"
							width="auto" />
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Линейный руководитель" class="myTextForInput" width="auto"/>
						<Text text="Семёнов Игорь Викторович" class="myTextForInput" width="auto"/>
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Вышестоящий руководитель" class="myTextForInput" width="auto"/>
						<Text text="Афансьев Андрей Фёдорович" class="myTextForInput" width="auto"/>
					</items>
				</FlexBox>
			</VBox>
			<VBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Вид договора" class="myTextForInput" />
						<Input value="" id="type" width="auto" />

					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Штатная должность*" class="myTextForInput" />
						<ComboBox id="positions" items="{
									path:'requests>/Positions'
								}"
							width="auto">
							<core:Item text="{requests>Name}" />
						</ComboBox>

					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Отрасль" class="myTextForInput" />
						<ComboBox id="Branch" items="{
									path:'requests>/Branches'
								}"
							width="auto">
							<core:Item text="{requests>Name}" />
						</ComboBox>
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="auto">
					<items>
						<Text text="Функциональная сфера" class="myTextForInput" />
						<ComboBox id="Sphere" items="{
									path:'requests>/Spheres'
								}"
							width="auto">
							<core:Item text="{requests>Name}" />
						</ComboBox>
					</items>
				</FlexBox>
				
			</VBox>
		</FlexBox>
		</ScrollContainer>
		<Panel expandable="true" expanded="true" headerText="Обоснование вакансии"
			width="auto">
			<content>
				<FlexBox>
					<VBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="36rem">
							<items>
								<Text text="ФИО увольняющегося сотрудника" class="myTextForInput" />
								<Input value="" id="fio" width="12rem" />
							</items>
						</FlexBox>
						<FlexBox alignItems="Center" justifyContent="SpaceBetween"
							width="36rem">
							<items>
								<Text text="Обоснование необходимости подбора" class="myTextForInput" />
								<Input value="" id="why" width="15rem" />
							</items>
						</FlexBox>
					</VBox>
				</FlexBox>
			</content>
		</Panel>
		<Panel expandable="true" expanded="true" headerText="Основные функции"
			width="auto">
			<content>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="36rem">
					<items>
						<Text text="Основные выполняемые функции" />
						<TextArea cols="40" rows="10" id="func"/>
					</items>
				</FlexBox>
			</content>
		</Panel>
		<Panel expandable="true" expanded="true" headerText="Квалификационные требования"
			width="auto">
			<content>
				<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Вид образования" class="myTextForInput" />
							<Input value="" id="educ" width="12rem" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Специальная подготовка" class="myTextForInput" />
							<Input value="" id="spec" width="12rem" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Опыт работы" class="myTextForInput" />
							<Input value="" id="exp" width="12rem" />
						</items>
					</FlexBox>
				</VBox>
			</content>
		</Panel>
		<Panel expandable="true" expanded="true" headerText="Знания и умения"
			width="auto">
			<content>
				<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Сотрудник должен знать:" class="myTextForInput" />
							<TextArea cols="40" id="must_k" rows="5" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Сотрудник должен уметь:" class="myTextForInput" />
							<TextArea cols="40" id="must_do" rows="5" />
						</items>
					</FlexBox>
				</VBox>
			</content>
		</Panel>
		<Panel expandable="true" expanded="true" headerText="Условия работы"
			width="auto">
			<content>
				<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="26rem">
						<items>
							<Text text="Режим работы" class="myTextForInput" />
							<ComboBox items="{
									path:'requests>/Modes'
								}"
								width="12rem" id="mode">
								<core:Item text="{requests>Name}" />
							</ComboBox>
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Оплата труда:" class="myTextForInput" />
							<Input value="" width="12rem" placeholder="Минимум" id="min"/>
							<Input value="" width="12rem" placeholder="Максимум" id="max"/>
						</items>
					</FlexBox>
				</VBox>
			</content>
		</Panel>
		<Panel expandable="true" expanded="false" headerText="Комментарий к заявке"
			width="auto">
			<content>
				<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="36rem">
						<items>
							<Text text="Комментарий к заявке:" class="myTextForInput" />
							<TextArea cols="40" id="comment" rows="5" />
						</items>
					</FlexBox>
				</VBox>
			</content>
		</Panel>
