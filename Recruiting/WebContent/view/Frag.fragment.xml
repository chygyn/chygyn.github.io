<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.commons" xmlns:l="sap.ui.commons.layout"
	xmlns:m="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:form="sap.ui.layout.form"
	xmlns:u="sap.ui.unified" xmlns:t="sap.ui.table">
	
<t:Table rows="{products>/accessories}" visibleRowCount="{path:'products>/accessories',
    formatter:'evola.recruiting.utilits.Formatter.tabRows'}" selectionMode="Single" id="accTable" noData="Аксессуаров не заведено">
		<t:toolbar>
				<m:Toolbar>
					<m:Title text="Аксессуары"/>
					<m:Button
						width="auto"
						text="Создать"
						press="onPressCreate"/>
					<m:ToolbarSpacer/>
					<m:Button
						width="auto"
						text="Удалить"
						press="onPressDelete"/>
					<m:ToolbarSeparator/>
				</m:Toolbar>
			</t:toolbar>
		<t:columns>
			<t:Column width="80%" hAlign="Center">
				<Label design="Bold" wrapping="true" textAlign="Center"
					text="lolo" />
				<t:template>
					<!-- <TextView text="{Objdes}" /> -->
					<m:Text text="{products>Name}" />
				</t:template>
			</t:Column>
			<t:Column hAlign="Center">
				<Label design="Bold" wrapping="true" textAlign="Center"
					text="lolo2" />
				<t:template>
					<m:Text text="12" />
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
		
</core:FragmentDefinition>