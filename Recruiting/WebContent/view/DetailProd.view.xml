<core:View
	controllerName="evola.recruiting.view.DetailProd"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="Просмотр продукта"
		showNavButton="true"
		navButtonPress="handleNavButtonPress">
		<Panel headerText="{products>Name}" width="auto" class="sapUiResponsiveMargin">
			<Image src="{products>ProductPicUrl}"/>
			<Text text="{products>Description}"/>
			<Panel expandable="true" expanded="false" headerText="Характеристики" width="auto" class="sapUiResponsiveMargin">
				<content>
					<HBox class="sapUiResponsiveMargin">
						<VBox class="sapUiResponsiveMargin">
							<Text text="Масса"/>
							<Text text="Ширина"/>
							<Text text="Глубина"/>
							<Text text="Высота"/>							
						</VBox>
						<VBox class="sapUiResponsiveMargin">
							<Text text="{products>WeightMeasure}"/>
							<Text text="{products>Width}"/>
							<Text text="{products>Depth}"/>
							<Text text="{products>Height}"/>							
						</VBox>
						<VBox class="sapUiResponsiveMargin">
							<Text text="{products>WeightUnit}"/>
							<Text text="{products>DimUnit}"/>
							<Text text="{products>DimUnit}"/>
							<Text text="{products>DimUnit}"/>							
						</VBox>
					</HBox>
				</content>
			</Panel>
		</Panel>
		</Page>
</core:View>