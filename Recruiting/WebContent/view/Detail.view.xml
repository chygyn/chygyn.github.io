<mvc:View controllerName="evola.recruiting.view.Detail" xmlns="sap.m"
	xmlns:k="sap.ui.commons" xmlns:mvc="sap.ui.core.mvc" xmlns:wtf="sap.ui.demo.myFiori.control"
	xmlns:t="sap.ui.table">
	<Page title="{i18n>DetailTitle}" showNavButton="{requests>Requests}"
		navButtonPress="handleNavButtonPress" enableScrolling="true" class="myHeader">
		<ObjectHeader binding="{requests/}"
			title="{requests>NameReq} № {requests>ReqId}">
			<attributes>
				<ObjectAttribute text="Дата составления заявки {requests>Data}" />
			</attributes>
			<statuses>
				<ObjectStatus text="{requests>Status}" state="{requests>State}" />
			</statuses>
		</ObjectHeader>
		<FlexBox alignItems="Center" justifyContent="Center" width="auto">
			<VBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Название вакансии" class="myTextForInput" />
						<Text text="{requests>Name}" class="myTextForInput" id="Name" />
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Должность: " class="myTextForInput" />
						<Text text="{requests>Position}" class="myTextForInput"/>

					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Линейный руководитель" class="myTextForInput" />
						<Text text="{requests>Lin_leader}" class="myTextForInput" />
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Вышестоящий руководитель" class="myTextForInput" />
						<Text text="{requests>Leader}" class="myTextForInput" />
					</items>
				</FlexBox>
			</VBox>
			<VBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Плановая дата" class="myTextForInput" />
						<Text text="{requests>Date}" class="myTextForInput"/>
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Вид договора" class="myTextForInput" />
						<Text text="{requests>Type}" class="myTextForInput"/>
					</items>
				</FlexBox>				
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Функциональная сфера" class="myTextForInput" />
						<Text text="{requests>Sphere}" class="myTextForInput"/>
					</items>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="SpaceBetween"
					width="30rem">
					<items>
						<Text text="Отрасль" class="myTextForInput" />
						<Text text="{requests>Branch}" class="myTextForInput"/>
					</items>
				</FlexBox>
			</VBox>
		</FlexBox>
		



		<IconTabBar id="tabBar" class="detailITB">
			<items class="sapUiResponsiveContentPadding">
				<IconTabFilter icon="sap-icon://begin" text="Обоснование вакансии">
					<FlexBox>
						<VBox>
							<FlexBox alignItems="Center" justifyContent="SpaceBetween"
								width="auto">
								<items>
									<Text text="ФИО увольняющегося сотрудника" class="myTextForInput" />
									<Text text="{requests>Fio}" />
								</items>
							</FlexBox>
							<FlexBox alignItems="Center" justifyContent="SpaceBetween"
								width="auto">
								<items>
									<Text text="Обоснование необходимости подбора" class="myTextForInput" />
									<Text text="{requests>Why}" />
								</items>
							</FlexBox>
						</VBox>
					</FlexBox>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://share" text="Основные функции">
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Основные выполняемые функции:" />
							<Text text="{requests>Func}" />
						</items>
					</FlexBox>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://kpi-managing-my-area" text="Квалификация">
					<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Вид образования" class="myTextForInput" />
							<Text text="{requests>Educ}" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Направленность образования" class="myTextForInput" />
							<Text text="{requests>NaprEduc}" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Специальная подготовка" class="myTextForInput" />
							<Text text="{requests>Spec}" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Опыт работы" class="myTextForInput" />
							<Text text="{requests>Exp}" />
						</items>
					</FlexBox>
				</VBox>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://learning-assistant" text="Знания и умения">
					<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Сотрудник должен знать:" class="myTextForInput" />
							<Text text="{requests>Must_k}" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Сотрудник должен уметь:" class="myTextForInput" />
							<Text text="{requests>Must_do}" />
						</items>
					</FlexBox>
				</VBox>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://customer-financial-fact-sheet" text="Условия работы">
					<VBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Режим работы" class="myTextForInput" />
							<Text text="{requests>Mode}" />
						</items>
					</FlexBox>
					<FlexBox alignItems="Center" justifyContent="SpaceBetween"
						width="auto">
						<items>
							<Text text="Оплата труда:" class="myTextForInput" />
							<Text text="Минимум {requests>Min}" />
							<Text text="Максимум {requests>Max}" />
						</items>
					</FlexBox>
				</VBox>
				</IconTabFilter>
			</items>

		</IconTabBar>
	</Page>
</mvc:View>