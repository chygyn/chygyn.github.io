<mvc:View
	controllerName="evola.recruiting.view.Master"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" >
	<Page title="Заявки" class="myMasterView"> 
		
		
		<customHeader>
			<Bar>
				<contentLeft>
					<Image
					src="./model/logo.jpg"
					width="150px"/>
				</contentLeft>
			</Bar>
		</customHeader>
		<Text text="{oData[1]}"/>
		<List
			id = "ListMaster"
			select = "handleListSelect"
			mode="SingleSelectMaster"
			items="{requests>/Requests}" >
			<ObjectListItem
				type="Active"
				title="{requests>NameReq} № {requests>ReqId}"
				press="handleListItemPress">
						<firstStatus>
							<ObjectStatus
								text="{requests>Status}"
								state="{requests>State}"/>
						</firstStatus>
						<attributes>	
							<ObjectAttribute text="Составлена {requests>Data}"/>
							<ObjectAttribute text="Плановая дата {requests>Date}"/>
						</attributes>				
			</ObjectListItem>
		</List>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text ="Добавить"
						press="addItem">
					</Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>